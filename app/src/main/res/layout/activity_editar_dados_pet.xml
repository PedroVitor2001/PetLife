<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Pet"
        android:padding="12dp"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/inputDataNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Nascimento"
        android:padding="12dp"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/inputTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo (Cão ou Gato)"
        android:padding="12dp"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/inputCor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cor do Pet"
        android:padding="12dp"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/inputPorte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porte (Pequeno, Médio, Grande)"
        android:padding="12dp"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:padding="12dp"
        android:minHeight="48dp" />
</LinearLayout>
